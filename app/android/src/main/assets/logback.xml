<configuration>
    <appender name="ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOGS_DIR}/app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${EXT_DIR}/logs/app.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>3</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss} %-5level %logger{10} [%file:%line] %msg%n%ex%n
            </pattern>
        </encoder>
    </appender>

    <appender name="LOGCAT" class="ch.qos.logback.classic.android.LogcatAppender">
        <encoder>
            <pattern>%msg%n%ex%n</pattern>
        </encoder>
    </appender>

    <logger name="io.ktor.client.plugins" level="OFF" />

    <root level="TRACE">
        <appender-ref ref="ROLLING" />
        <appender-ref ref="LOGCAT" />
    </root>

    <logger name="logcatDebug" level="DEBUG">
        <appender-ref ref="LOGCAT" />
    </logger>
</configuration>